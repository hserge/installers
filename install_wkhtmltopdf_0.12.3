echo -e "\n---- Install WkHtmlToPdf 0.12.3 ----"

# switch to the home directory
cd ~

# download and extract
sudo wget -qO- http://download.gna.org/wkhtmltopdf/0.12/0.12.3/wkhtmltox-0.12.3_linux-generic-amd64.tar.xz | tar xJ

# copy to the exec folder
sudo cp wkhtmltox/bin/wkhtmltoimage /usr/local/bin/
sudo cp wkhtmltox/bin/wkhtmltopdf /usr/local/bin/

# cleanup
rm -rf wkhtmltox

echo -e "Wkhtmltopdf 0.12.3 is installed!"

